{
	"name": "ecopages",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"watch:dev:playground": "bun run watch:ecopages & bun run --filter @ecopages/playground watch:dev",
		"dev:playground": "bun run --filter @ecopages/playground dev",
		"build:playground": "bun run --filter @ecopages/playground build",
		"start:playground": "bun run --filter @ecopages/playground start",
		"preview:playground": "bun run --filter @ecopages/playground preview",
		"dev:starter": "bun run --filter @ecopages/starter dev",
		"build:starter": "bun run --filter @ecopages/starter build",
		"start:starter": "bun run --filter @ecopages/starter start",
		"preview:starter": "bun run --filter @ecopages/starter preview",
		"dev:docs": "bun run --filter @ecopages/docs dev",
		"build:docs": "bun run --filter @ecopages/docs build",
		"start:docs": "bun run --filter @ecopages/docs start",
		"preview:docs": "bun run --filter @ecopages/docs preview",
		"dev:docs-radiant": "bun run --filter @ecopages/docs-radiant dev",
		"build:docs-radiant": "bun run --filter @ecopages/docs-radiant build",
		"start:docs-radiant": "bun run --filter @ecopages/docs-radiant start",
		"preview:docs-radiant": "bun run --filter @ecopages/docs-radiant preview",
		"dev:radiant-ui": "bun run --filter @ecopages/radiant-ui dev",
		"build:radiant-ui": "bun run --filter @ecopages/radiant-ui build",
		"start:radiant-ui": "bun run --filter @ecopages/radiant-ui start",
		"preview:radiant-ui": "bun run --filter @ecopages/radiant-ui preview",
		"dev:react-app": "bun run --filter @ecopages/react-app dev",
		"build:react-app": "bun run --filter @ecopages/react-app build",
		"start:react-app": "bun run --filter @ecopages/react-app start",
		"preview:react-app": "bun run --filter @ecopages/react-app preview",
		"clean": "rm -rf node_modules bun.lockb packages/*/dist packages/**/*/dist && bun install && bun run build:ecopages",
		"format": "bunx @biomejs/biome format --write .",
		"lint": "bunx @biomejs/biome check --apply .",
		"lint-staged": "lint-staged",
		"build:deps": "bun run --filter @ecopages/logger build:lib",
		"build:core": "bun run --filter @ecopages/core build:lib",
		"build:integrations": "bun run --filter @ecopages/kitajs --filter @ecopages/lit --filter @ecopages/mdx --filter @ecopages/react build:lib",
		"build:servers": "bun run --filter @ecopages/fastify build:lib",
		"build:ecopages": "bun run build:deps && bun run build:core && bun run build:integrations && bun run build:servers",
		"watch:ecopages": "bun run --filter '*' watch:lib"
	},
	"devDependencies": {
		"husky": "^9.0.10",
		"lint-staged": "^15.2.2"
	},
	"module": "src/index.js",
	"repository": "https://github.com/andeeplus/ecopages.git",
	"workspaces": [
		"packages/*",
		"packages/integrations/*",
		"packages/servers/*",
		"examples/*",
		"apps/*"
	],
	"type": "module"
}
