{
	"name": "eco-pages",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev:playground": "bun run --filter @eco-pages/playground dev",
		"build:playground": "bun run --filter @eco-pages/playground build",
		"start:playground": "bun run --filter @eco-pages/playground start",
		"preview:playground": "bun run --filter @eco-pages/playground preview",
		"dev:starter": "bun run --filter @eco-pages/starter dev",
		"build:starter": "bun run --filter @eco-pages/starter build",
		"start:starter": "bun run --filter @eco-pages/starter start",
		"preview:starter": "bun run --filter @eco-pages/starter preview",
		"dev:docs": "bun run --filter @eco-pages/docs dev",
		"build:docs": "bun run --filter @eco-pages/docs build",
		"start:docs": "bun run --filter @eco-pages/docs start",
		"preview:docs": "bun run --filter @eco-pages/docs preview",
		"dev:docs-lite-elements": "bun run --filter @eco-pages/docs-lite-elements dev",
		"build:docs-lite-elements": "bun run --filter @eco-pages/docs-lite-elements build",
		"start:docs-lite-elements": "bun run --filter @eco-pages/docs-lite-elements start",
		"preview:docs-lite-elements": "bun run --filter @eco-pages/docs-lite-elements preview",
		"dev:react-app": "bun run --filter @eco-pages/react-app dev",
		"build:react-app": "bun run --filter @eco-pages/react-app build",
		"start:react-app": "bun run --filter @eco-pages/react-app start",
		"preview:react-app": "bun run --filter @eco-pages/react-app preview",
		"prepare:lib": "bun run --filter @eco-pages/scripts-injector --filter @eco-pages/lite-elements build:lib",
		"clean": "rm -rf .eco node_modules bun.lockb && bun install && bun run prepare:lib",
		"format": "bunx @biomejs/biome format --write .",
		"lint": "bunx @biomejs/biome check --apply .",
		"lint-staged": "lint-staged"
	},
	"devDependencies": {
		"husky": "^9.0.10",
		"lint-staged": "^15.2.2"
	},
	"module": "src/index.js",
	"repository": "https://github.com/andeeplus/eco-pages.git",
	"workspaces": [
		"packages/*",
		"packages/integrations/*",
		"examples/*",
		"apps/*"
	],
	"type": "module"
}
