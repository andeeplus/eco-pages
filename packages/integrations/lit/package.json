{
	"name": "@ecopages/lit",
	"version": "0.0.0",
	"license": "MIT",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./package.json": {
			"import": "./package.json"
		},
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ecopages/ecopages.git",
		"directory": "packages/integrations/lit"
	},
	"scripts": {
		"prebuild:lib": "rm -rf dist",
		"build:lib": "bun run build.ts && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json && bunx tsc-alias",
		"watch:lib": "bun run build.ts --dev-mode"
	},
	"dependencies": {
		"@lit-labs/ssr": "^3.2.2",
		"lit": "^3.1.3"
	},
	"peerDependencies": {
		"@ecopages/core": "workspace:*"
	},
	"devDependencies": {
		"esbuild": "^0.21.4"
	}
}
