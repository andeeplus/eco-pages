{
	"name": "@ecopages/react",
	"version": "0.0.0",
	"license": "MIT",
	"main": "./index.ts",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": ["dist", "src"],
	"exports": {
		"./package.json": {
			"import": "./package.json"
		},
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ecopages/ecopages.git",
		"directory": "packages/integrations/react"
	},
	"scripts": {
		"prebuild:lib": "rm -rf dist",
		"build:lib": "bun run build.ts && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json && bunx tsc-alias"
	},
	"overrides": {
		"@types/react": "npm:types-react@beta",
		"@types/react-dom": "npm:types-react-dom@beta"
	},
	"peerDependencies": {
		"@ecopages/core": "workspace:*",
		"react": "^19.0.0 || 19.0.0-rc-* || 19.0.0-beta-*",
		"react-dom": "^19.0.0 || 19.0.0-rc-* || 19.0.0-beta-*"
	},
	"devDependencies": {
		"@types/react": "npm:types-react@beta",
		"@types/react-dom": "npm:types-react-dom@beta"
	}
}
