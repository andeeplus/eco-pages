{
	"name": "@ecopages/react",
	"version": "0.0.0",
	"license": "MIT",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./package.json": {
			"import": "./package.json"
		},
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/react.plugin.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ecopages/ecopages.git",
		"directory": "packages/integrations/react"
	},
	"scripts": {
		"build:lib": "bun run build.ts && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json && bunx tsc-alias",
		"watch:lib": "bun run build.ts --dev-mode"
	},
	"overrides": {
		"@types/react": "npm:types-react@beta",
		"@types/react-dom": "npm:types-react-dom@beta"
	},
	"peerDependencies": {
		"@ecopages/core": "workspace:*",
		"@ecopages/logger": "workspace:*",
		"react": "19.0.0-beta-26f2496093-20240514",
		"react-dom": "19.0.0-beta-26f2496093-20240514"
	},
	"devDependencies": {
		"@types/react": "npm:types-react@beta",
		"@types/react-dom": "npm:types-react-dom@beta",
		"esbuild": "^0.21.4"
	}
}
