{
	"name": "@ecopages/kitajs",
	"version": "0.0.0",
	"license": "MIT",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./package.json": {
			"import": "./package.json"
		},
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ecopages/ecopages.git",
		"directory": "packages/integrations/kitajs"
	},
	"scripts": {
		"prebuild:lib": "rm -rf dist",
		"build:lib": "bun run build.ts && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json && bunx tsc-alias",
		"watch:lib": "bun run build.ts --dev-mode"
	},
	"dependencies": {
		"@kitajs/html": "^4.1.0",
		"@kitajs/ts-html-plugin": "^4.0.1"
	},
	"peerDependencies": {
		"@ecopages/core": "workspace:*"
	},
	"devDependencies": {
		"esbuild": "^0.21.4"
	}
}
