{
	"name": "@ecopages/core",
	"version": "0.0.0",
	"license": "MIT",
	"main": "./dist/index.js",
	"type": "module",
	"files": ["dist"],
	"bin": {
		"ecopages": "ecopages.ts"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": {
			"import": "./package.json"
		},
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./deps-manager": {
			"import": "./dist/modules/deps-manager.module.js",
			"types": "./dist/modules/deps-manager.module.d.ts"
		},
		"./add-base-url-to-pathname": {
			"import": "./dist/utils/add-base-url-to-pathname.js",
			"types": "./dist/utils/add-base-url-to-pathname.d.ts"
		},
		"./integration-renderer": {
			"import": "./dist/route-renderer/integration-renderer.js",
			"types": "./dist/route-renderer/integration-renderer.d.ts"
		},
		"./deep-merge": {
			"import": "./dist/utils/deep-merge.js",
			"types": "./dist/utils/deep-merge.d.ts"
		},
		"./invariant": {
			"import": "./dist/utils/invariant.js",
			"types": "./dist/utils/invariant.d.ts"
		},
		"./app-logger": {
			"import": "./dist/utils/app-logger.js",
			"types": "./dist/utils/app-logger.d.ts"
		},
		"./file-utils": {
			"import": "./dist/utils/file-utils.js",
			"types": "./dist/utils/file-utils.d.ts"
		},
		"./loaders/inline-postcss.loader.js": {
			"import": "./dist/loaders/inline-postcss.loader.js",
			"types": "./dist/loaders/inline-postcss-loader.d.ts"
		},
		"./loaders/mdx.loader.js": {
			"import": "./dist/loaders/mdx.loader.js",
			"types": "./dist/loaders/mdx.loader.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ecopages/ecopages.git",
		"directory": "packages/core"
	},
	"scripts": {
		"build:lib": "bun run build.ts && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json && bunx tsc-alias",
		"test:lib": "bun test",
		"watch:lib": "bun run build.ts --dev-mode"
	},
	"dependencies": {
		"chokidar": "^3.6.0",
		"@mdx-js/esbuild": "^3.0.1",
		"@types/postcss-import": "^14.0.3",
		"autoprefixer": "^10.4.16",
		"bun-types": "latest",
		"cssnano": "^6.0.2",
		"postcss": "^8.4.32",
		"postcss-import": "^15.1.0",
		"tailwindcss": "^3.4.1",
		"@lit-labs/ssr": "^3.2.2"
	},
	"devDependencies": {
		"esbuild": "^0.21.4"
	}
}
